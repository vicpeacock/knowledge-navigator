# Multi-stage build per ottimizzare dimensioni immagine
FROM python:3.11-slim AS builder

# Installa dipendenze di sistema necessarie per build
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libmagic1 \
    && rm -rf /var/lib/apt/lists/*

# Crea directory di lavoro
WORKDIR /app

# Copia requirements e installa dipendenze Python
# For cloud deployment, use requirements-cloud.txt (includes Gemini SDK)
# For local, use requirements.txt (includes Ollama)
ARG REQUIREMENTS_FILE=requirements.txt
# Copy both requirements files (cloud.txt may include base.txt)
COPY requirements.txt requirements.txt
COPY ${REQUIREMENTS_FILE} requirements-target.txt
# Use the target file, which may include -r requirements.txt
# Set PATH during installation to avoid warnings
ENV PATH=/root/.local/bin:$PATH
RUN pip install --no-cache-dir --user -r requirements-target.txt

# Stage finale - immagine runtime minimale
FROM python:3.11-slim

# Installa solo runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libmagic1 \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copia dipendenze Python dallo stage builder
COPY --from=builder /root/.local /root/.local

# Assicura che le librerie siano nel PATH
ENV PATH=/root/.local/bin:$PATH

# Crea directory di lavoro
WORKDIR /app

# Copia codice applicazione
# alembic.ini è già incluso in backend/
COPY backend/ ./backend/
# Copia anche alembic.ini nella root per accesso diretto
COPY backend/alembic.ini ./alembic.ini
# Copia documentazione interna per indicizzazione auto-coscienza
COPY docs/ ./docs/

# Crea directory necessarie
RUN mkdir -p logs uploads

# Variabili ambiente
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PORT=8000

# Esponi porta (Cloud Run usa PORT env var)
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Comando di avvio
CMD ["sh", "-c", "cd backend && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}"]

